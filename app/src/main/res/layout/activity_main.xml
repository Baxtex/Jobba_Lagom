    <fragment
        android:layout_width="800dp"
        android:layout_height="130dp"

        android:name="com.example.i7.jobbalagom.activities.MainActivityBudgetFragment"
        android:id="@+id/budgetfragment"
        tools:layout="@layout/activity_main_progress_budget_fragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/colorPrimary"
            fab:fab_addButtonColorPressed="@color/half_black"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_labelStyle="@style/menu_labels_style"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
      >
        <!--
            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnChangeTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_assignment_turned_in_white_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_title="@string/fButtonTax"
                fab:fab_colorPressed="@color/white_pressed"/>
            -->



            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_addButtonPlusIconColor="@color/half_black"
                fab:fab_icon="@drawable/ic_assignment_turned_in_white_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_title="@string/fButtonBudget"
                fab:fab_colorPressed="@color/white_pressed"/>

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddShift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_alarm_white_24dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_title="@string/fButtonTime"
                fab:fab_colorPressed="@color/white_pressed"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnAddExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_icon="@drawable/ic_alarm_white_24dp"
                fab:fab_title="@string/fButtonExpanse"
                fab:fab_colorPressed="@color/white_pressed"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_addjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_icon="@drawable/ic_alarm_white_24dp"
                fab:fab_title="LÃ¤gg till jobb"
                fab:fab_colorPressed="@color/white_pressed"
                />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fribelopp"
        android:id="@+id/textView2"
        android:paddingLeft="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:name="com.example.i7.jobbalagom.activities.NewMainBarFragment"
        android:id="@+id/fragment2"
        tools:layout="@layout/new_main_bar_fragment"
        android:layout_alignBottom="@+id/multiple_actions"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
