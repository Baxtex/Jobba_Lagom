<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueellowbg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <Button
            android:id="@+id/btnWhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_rounded_corners_blueish"
            android:padding="25dp"
            android:text="Vad?"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnHow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWhat"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_rounded_corners_blueish"
            android:padding="25dp"
            android:text="Hur?"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnWhy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnHow"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_rounded_corners_blueish"
            android:padding="25dp"
            android:text="VarfÃ¶r?"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnWho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnWhy"
            android:background="@drawable/btn_rounded_corners_blueish"
            android:padding="25dp"
            android:text="Vem?"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/popupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans"
        android:clickable="true"
        android:padding="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popup_layout_white">

            <TextView
                android:id="@+id/tvPopupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_sub_title_size" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvPopupTitle"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/tvPopupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text_size_popup" />

            <Button
                android:id="@+id/btnExitPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/exit_icon" />

            <ImageView
                android:id="@+id/ivSelfie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:background="@drawable/selfiee"
                android:visibility="invisible" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>