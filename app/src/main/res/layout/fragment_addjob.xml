<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgSetup"
    android:paddingBottom="@dimen/fragment_padding_height"
    android:paddingLeft="@dimen/fragment_padding_width"
    android:paddingRight="@dimen/fragment_padding_width"
    android:paddingTop="@dimen/fragment_padding_height"
    tools:context=".activities.AddJobFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/expense_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/icon_margin"
                android:background="@drawable/expense_icon" />

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/title_margin"
                android:text="Lägg till jobb"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:background="@color/grey"
            android:text="Titel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_text_size" />

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:background="@color/white"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="@dimen/et_text_size" />

        <TextView
            android:id="@+id/tvWage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputTitle"
            android:layout_marginTop="@dimen/text_margin"
            android:background="@color/grey"
            android:text="Timlön"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_text_size" />

        <EditText
            android:id="@+id/inputWage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvWage"
            android:background="@color/white"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="@dimen/et_text_size" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputWage"
            android:layout_marginTop="@dimen/text_margin"
            android:background="@color/grey"
            android:text="OB-tillägg"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_text_size" />

        <TextView
            android:id="@+id/tvOBweekday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:background="@color/white"
            android:hint="Vardag"
            android:textColorHint="@color/grey"
            android:textStyle="italic"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="@dimen/et_text_size"
            />

        <TextView
            android:id="@+id/tvOBsaturday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOBweekday"
            android:background="@color/white"
            android:hint="Lördag"
            android:textColorHint="@color/grey"
            android:textStyle="italic"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="@dimen/et_text_size"
            />

        <TextView
            android:id="@+id/tvOBsunday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOBsaturday"
            android:background="@color/white"
            android:hint="Söndag"
            android:textColorHint="@color/grey"
            android:textStyle="italic"
            android:inputType="date"
            android:textAlignment="center"
            android:textSize="@dimen/et_text_size"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOBsunday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Lägg till"
            android:textColor="@color/white"
            />

    </RelativeLayout>


    <fragment
        android:name="com.example.i7.jobbalagom.java.fragments.OBFragment"
        android:id="@+id/obFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_trans"
        tools:layout="@layout/fragment_ob">

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fragment_padding_height"
            android:paddingLeft="@dimen/fragment_padding_width"
            android:paddingRight="@dimen/fragment_padding_width"
            android:paddingTop="@dimen/fragment_padding_height">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                />

        </LinearLayout>

    </fragment>



</RelativeLayout>
